<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:layout_margin="0dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/text_view_background">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/profile_empty_icon"
                android:layout_centerHorizontal="true"
                android:id="@+id/profileImageViewId"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_below="@id/profileImageViewId"
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="User : "
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEmailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Email : "
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:drawablePadding="10dp"
                android:id="@+id/textViewPhoneId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/text_view_backgroiund2"
                android:clickable="true"
                android:elevation="4dp"
                android:textColor="#ffffff"
                android:padding="20dp"
                android:text="Phone : " />

            <TextView
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_card_membership_black_24dp"
                android:id="@+id/textViewNIDid"
                android:background="@drawable/text_view_backgroiund2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:elevation="4dp"
                android:textColor="#ffffff"
                android:padding="20dp"
                android:text="NID : " />

            <TextView
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_grid_on_black_24dp"
                android:id="@+id/textViewDateOfBirthId"
                android:background="@drawable/text_view_backgroiund2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:elevation="4dp"
                android:textColor="#ffffff"
                android:padding="20dp"
                android:text="Date Of Birth" />



            <Button
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_view_background"
                android:layout_margin="20dp"
                android:id="@+id/uploadedProblemId"
                android:text="Uploaded Problem"
                android:onClick="gotoUploadProblem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>